<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LisaaKayttajaServlet</servlet-name>
        <servlet-class>arkisto.LisaaKayttajaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>arkisto.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LisaaDrinkkiServlet</servlet-name>
        <servlet-class>arkisto.LisaaDrinkkiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>arkisto.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LisaaKayttajaServlet</servlet-name>
        <url-pattern>/LisaaKayttaja</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LisaaDrinkkiServlet</servlet-name>
        <url-pattern>/LisaaDrinkki</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
